<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- HEADER -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/true_pink"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Découvre les lieux"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- BARRE DE RECHERCHE -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/searchPlaceInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Rechercher un lieu..."
            android:padding="12dp"
            android:background="@drawable/rounded_input_bg"
            android:textColor="@color/dark"
            android:textColorHint="@color/gray" />

        <ImageButton
            android:id="@+id/searchButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circle_white"
            android:src="@drawable/ic_search_foreground"
            app:tint="@color/true_pink"
            android:layout_marginStart="8dp" />

        <ImageButton
            android:id="@+id/filterButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circle_white"
            android:src="@drawable/ic_filter_foreground"
            app:tint="@color/true_pink"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- SECTION RECOMMANDÉE -->
    <TextView
        android:text="Recommandés pour toi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/true_pink"
        android:textStyle="bold"
        android:textSize="18sp"
        android:paddingHorizontal="16dp"
        android:layout_marginTop="4dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recommendedPlacesRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:clipToPadding="false"
        android:nestedScrollingEnabled="false" />

    <!-- SECTION LISTE PRINCIPALE -->
    <TextView
        android:text="Tous les lieux"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/true_pink"
        android:textStyle="bold"
        android:textSize="18sp"
        android:paddingHorizontal="16dp"
        android:layout_marginTop="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/placesRecycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="8dp"
        android:clipToPadding="false" />

    <ProgressBar
        android:id="@+id/progressBarPlaces"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:visibility="gone"/>

</LinearLayout>
